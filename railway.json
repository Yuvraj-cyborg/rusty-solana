{
    "build": {
      "builder": "NIXPACKS",
      "buildCommand": "cargo build --release && mkdir -p /app/bin && cp target/release/rusty-proc /app/bin/rusty-proc"
    },
    "deploy": {
      "runtime": "V2",
      "numReplicas": 1,
      "startCommand": "./bin/rusty-proc",
      "sleepApplication": false,
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }
  