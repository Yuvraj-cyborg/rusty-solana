{
    "build": {
      "builder": "NIXPACKS",
      "buildCommand": "cargo build --release && mkdir -p bin && cp target/release/rusty-proc bin/ && ls -la bin/"
    },
    "deploy": {
      "runtime": "V2",
      "numReplicas": 1,
      "startCommand": "./bin/rusty-proc",
      "sleepApplication": false,
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }
  